{
	"name": "va-release",
	"version": "1.0.14",
	"description": "release publishing tool for npm and github",
	"main": "index.js",
	"bin": "index.js",
	"engines": {
		"node": ">=6.0.0"
	},
	"va-release": {
		"files": [
			{
				"cwd": "templates/",
				"src": [
					"**/*"
				],
				"dest": "./"
			}
		]
	},
	"scripts": {
		"test": "eslint .",
		"fix": "eslint --fix .",
		"release": "npm run patch-release",
		"patch-release": "npm test && ./index.js --version patch",
		"minor-release": "npm test && ./index.js --version minor",
		"major-release": "npm test && ./index.js --version major"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/forceuser/va-release.git"
	},
	"keywords": [
		"publish",
		"npm",
		"github"
	],
	"author": {
		"name": "Vitaly Dub",
		"url": "https://github.com/forceuser"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/forceuser/va-release/issues"
	},
	"homepage": "https://github.com/forceuser/va-release#readme",
	"dependencies": {
		"colors": "^1.1.2",
		"mustache": "^2.3.0",
		"fs-extra": "^3.0.1",
		"globby": "^6.1.0",
		"publish-release": "^1.3.3",
		"semver": "^5.3.0",
		"shelljs": "^0.7.7",
		"yargs": "^8.0.2"
	},
	"devDependencies": {
		"babel-core": "^6.24.0",
		"babel-eslint": "7.2.0",
		"babel-loader": "^7.0.0",
		"babel-plugin-istanbul": "^4.1.1",
		"babel-preset-es2015": "^6.24.0",
		"eslint": "3.18.0",
		"eslint-plugin-babel": "4.1.1",
		"eslint-plugin-import": "2.2.0"
	}
}
