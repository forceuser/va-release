{
	"name": "va-release",
	"version": "1.0.43",
	"description": "release publishing tool for npm and github",
	"main": "index.js",
	"bin": "cli.js",
	"engines": {
		"node": ">=6.0.0"
	},
	"_moduleAliases": {
		"va-release": "./index.js"
	},
	"nyc": {
		"temp-dir": "./coverage",
		"report-dir": "./coverage",
		"reporter": [
			"lcov",
			"text"
		]
	},
	"va-release": {
		"files": [
			{
				"cwd": "templates/",
				"src": [
					"**/*"
				],
				"dest": "./"
			}
		]
	},
	"scripts": {
		"init": "rm -rf ./node-modules/ > /dev/null && npm i",
		"update": "npx npm-check-updates -u && npm run init",
		"test": "eslint .",
		"fix": "eslint --fix .",
		"release": "npm run patch-release",
		"nobump-release": "cross-env BROWSERSLIST_ENV=modern npm test && node ./utils/run.js ./index.js --no-github",
		"patch-release": "cross-env BROWSERSLIST_ENV=modern npm test && node ./utils/run.js ./index.js --version patch",
		"minor-release": "cross-env BROWSERSLIST_ENV=modern npm test && node ./utils/run.js ./index.js --version minor",
		"major-release": "cross-env BROWSERSLIST_ENV=modern npm test && node ./utils/run.js ./index.js --version major"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/forceuser/va-release.git"
	},
	"keywords": [
		"publish",
		"npm",
		"github"
	],
	"author": {
		"name": "Vitaly Dub",
		"url": "https://github.com/forceuser"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/forceuser/va-release/issues"
	},
	"homepage": "https://github.com/forceuser/va-release#readme",
	"dependencies": {
		"@babel/core": "^7.4.3",
		"@babel/plugin-proposal-object-rest-spread": "^7.4.3",
		"@babel/plugin-proposal-optional-chaining": "^7.2.0",
		"@babel/plugin-proposal-unicode-property-regex": "^7.4.0",
		"@babel/plugin-syntax-dynamic-import": "^7.2.0",
		"@babel/plugin-syntax-import-meta": "^7.2.0",
		"@babel/plugin-transform-regenerator": "^7.4.3",
		"@babel/polyfill": "^7.4.3",
		"@babel/preset-env": "^7.4.3",
		"@babel/register": "^7.4.0",
		"form-data": "^2.3.3",
		"isomorphic-fetch": "github:forceuser/isomorphic-fetch",
		"colors": "^1.3.3",
		"esm": "^3.2.22",
		"fs-extra": "^7.0.1",
		"globby": "^9.2.0",
		"module-alias": "^2.2.0",
		"mustache": "^3.0.1",
		"parse-github-url": "^1.0.2",
		"publish-release": "^1.6.0",
		"semver": "^6.0.0",
		"shelljs": "^0.8.3",
		"ssri": "^6.0.1",
		"universal-url": "^2.0.0",
		"yargs": "^13.2.2"
	},
	"devDependencies": {
		"babel-eslint": ">=10.0.1",
		"babel-plugin-istanbul": "^5.1.1",
		"codecov": "^3.3.0",
		"cross-env": "^5.2.0",
		"deepmerge": "^3.2.0",
		"eslint": ">=5.16.0",
		"faucet": "0.0.1",
		"foreach-cli": "^1.8.1",
		"npm-run-all": "^4.1.5",
		"nyc": "^13.3.0",
		"sinon": "^7.3.1",
		"tape": "^4.10.1"
	}
}
